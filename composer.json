{
    "name": "gin0115/elmishphp-html",
    "type": "library",
    "description": "A functional based library for creating HTML in PHP, heavily inspired by the ELM HTML package",
    "keywords": [
        "FP",
        "ELM",
        "HTML",
        "Functional"
    ],
    "homepage": "https://github.com/gin0115/ElmishPHP-HTML",
    "license": "GPL-2.0-or-later",
    "authors": [{
        "name": "Glynn Quelch",
        "email": "glynn.quelch@pinkcrab.co.uk",
        "homepage": "https://github.com/gin0115",
        "role": "Developer"
    }],
    "support": {
        "issues": "https://github.com/gin0115/ElmishPHP-HTML/issues"
    },
    "autoload": {
        "psr-4": {
            "Gin0115\\ElmishPHP\\HTML\\": "src"
        },
        "files": [

        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Gin0115\\ElmishPHP\\HTML\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0",
        "phpstan/phpstan": "^1.0",
        "yoast/phpunit-polyfills": "^1.0.0",
        "symfony/var-dumper": "4.*",
        "friendsofphp/php-cs-fixer": "^3"
    },
    "require": {
        "php": ">=7.1.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --coverage-clover clover.xml --testdox",
        "coverage": "vendor/bin/phpunit --coverage-html coverage-report --testdox",
        "analyse": "vendor/bin/phpstan analyse src -l8",
        "all": "composer test && composer analyse && php-cs-fixer fix --diff --dry-run --rules=@PSR12 --show-progress=dots --stop-on-violation",
        "fixer": "php-cs-fixer fix --diff --rules=@PSR12 --show-progress=dots",
        "lint": "php-cs-fixer fix --diff --dry-run --rules=@PSR12"
    }
}